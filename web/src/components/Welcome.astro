<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--space-2) var(--space-2);
  }

  .logos {
    display: none;
  }

  .steps {
    flex-direction: column;
    width: 100%;

    & .steps__list {
      list-style-type: none;
      padding: 0;
    }

    & .steps__entry {
      margin-bottom: var(--space-4);
